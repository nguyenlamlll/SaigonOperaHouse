@page
@model SOH.Web.Pages.Event.CreateModel

@{
    ViewData["Title"] = "Create";
    ViewData["NavClass"] = "top-nav-collapse";
}

@section Styles
    {
    <style>
        body {
            padding-top: 100px;
        }
    </style>
}

<div class="container">
    <h2>Create</h2>

    <h4>Event</h4>
    <hr />
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Event.Title" class="control-label"></label>
                    <input asp-for="Event.Title" class="form-control" />
                    <span asp-validation-for="Event.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Event.Description" class="control-label"></label>
                    <input asp-for="Event.Description" class="form-control" />
                    <span asp-validation-for="Event.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Event.StartingDate" class="control-label"></label>
                    <input asp-for="Event.StartingDate" class="form-control" />
                    <span asp-validation-for="Event.StartingDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Event.EndingDate" class="control-label"></label>
                    <input asp-for="Event.EndingDate" class="form-control" />
                    <span asp-validation-for="Event.EndingDate" class="text-danger"></span>
                </div>

                @* Select image from disk, or copy link, or what *@
                @*<div class="form-group">
                    <label asp-for="Event.Images" class="control-label"></label>
                    <select asp-for="Event.Images" class="form-control" asp-items="ViewBag.ImageId"></select>
                </div>*@
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>


    <div>
        <a asp-page="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
