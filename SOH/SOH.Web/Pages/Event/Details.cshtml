@page
@model SOH.Web.Pages.Event.DetailsModel

@{
    ViewData["Title"] = "Details";
    ViewData["NavClass"] = "top-nav-collapse";
}

@section Styles
    {
    <style>
        body {
            padding-top: 100px;
        }
    </style>
}

<div class="container">
    <div class="text-center py-5 font-weight-bold">
        <h2> <strong>@Model.Event.Title</strong>
        </h2>
        <p class="text-muted font-italic">Start: @Model.Event.StartingDate</p>
        <p class="text-muted font-italic">End: @Html.DisplayFor(model => model.Event.EndingDate)</p>
        <p class="lead">
            @Model.Event.Description
        </p>
        @if (@Model.Event.Images.Count != 0)
        {
            <img src="@Model.Event.Images.FirstOrDefault().URI" />
        }
    </div>

    Information
    <div class="container">
        <h3>This event</h3>
        <div class="py-3 ml-3">
            <hr class="mb-2 mt-2 pb-1">
            <p>
                + Standard tickets from $79 + $8.50 Booking Fee
            </p>
            <hr class="mb-2 mt-2 pb-1">
            <p>
                + This show runs for 2 hours 30 minutes with one  interval
            </p>
            <hr class="mb-2 mt-2 pb-1">
            <p>
                + Recommended for 13+ years
            </p>
            <hr class="mb-2 mt-2 pb-1">
            <p>
                + Category is ROCK
            </p>
        </div>
    </div>
</div>

