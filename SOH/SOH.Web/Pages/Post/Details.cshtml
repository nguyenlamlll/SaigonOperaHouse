@page
@model SOH.Web.Pages.Post.DetailsModel

@{
    ViewData["Title"] = "Details";
    ViewData["NavClass"] = "top-nav-collapse";
}

@section Styles
    {
    <style>
        body {
            padding-top: 100px;
        }
    </style>
}

<div class="container">
    <div class="text-center py-5 font-weight-bold">
        <h2>@Model.Post.Title</h2>
        <p class="text-muted font-italic">@Model.Post.Created.Day/@Model.Post.Created.Month/@Model.Post.Created.Year</p>
        <p class="lead">
            @Model.Post.Content
        </p>
        @if (@Model.Post.Image != null)
        {
            <img src="@Model.Post.Image.URI" />
        }
    </div>

    <!--More stories-->
    <div class="container">
        <h3>Our Recent posts</h3>
        <div class="py-3 ml-3">
            <ul style="list-style: none;">
                <li>
                    <a>
                        <i class="fa fa-circle mr-2" aria-hidden="true"></i>
                        Nothing is better than night out
                    </a>
                </li>
                <li>
                    <a>
                        <i class="fa fa-circle mr-2" aria-hidden="true"></i>
                        Golden instruments with golden hands of the blind
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

