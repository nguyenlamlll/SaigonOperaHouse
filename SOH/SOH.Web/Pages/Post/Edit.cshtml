@page
@model SOH.Web.Pages.Post.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Post.Id" />
            <div class="form-group">
                <label asp-for="Post.Title" class="control-label"></label>
                <input asp-for="Post.Title" class="form-control" />
                <span asp-validation-for="Post.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Content" class="control-label"></label>
                <input asp-for="Post.Content" class="form-control" />
                <span asp-validation-for="Post.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Created" class="control-label"></label>
                <input asp-for="Post.Created" class="form-control" />
                <span asp-validation-for="Post.Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.ImageId" class="control-label"></label>
                <select asp-for="Post.ImageId" class="form-control" asp-items="ViewBag.ImageId"></select>
                <span asp-validation-for="Post.ImageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.ApplicationUserId" class="control-label"></label>
                <input asp-for="Post.ApplicationUserId" class="form-control" />
                <span asp-validation-for="Post.ApplicationUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
