@page
@model IndexModel
@{
    ViewData["Title"] = "Admin Dashboard";
    ViewData["NavClass"] = "top-nav-collapse";
}
@section Styles {
    <style>
        body {
            padding-top: 100px;
        }
    </style>
}
<div class="container">
    <h1 class="text-center mb-5">Admin Dashboard</h1>

    <div class="row">
        <div class="col-lg-4 col-md-3">
            <h3>Posts</h3>
            <a asp-page="/Post/Index" class="btn btn-amber">View All</a>
            <a asp-page="/Post/Create" class="btn btn-amber">Create New</a>
        </div>

        <div class="col-lg-4 col-md-3">
            <h3>Events</h3>
            <a asp-page="/Event/Index" class="btn btn-blue-grey">View All</a>
            <a asp-page="/Event/Create" class="btn btn-blue-grey">Create New</a>
        </div>

        <div class="col-lg-4 col-md-3">
            <h3>Products</h3>
            <a asp-page="/Product/Index" class="btn btn-cyan">View All</a>
            <a asp-page="/Product/Create" class="btn btn-cyan">Create New</a>
        </div>

        <div class="col-lg-4 pt-lg-5 col-md-3">
            <h3>Images</h3>
            <a asp-page="/Image/Index" class="btn btn-elegant">View All</a>
            <a asp-page="/Image/Create" class="btn btn-elegant">Create New</a>
        </div>

        <div class="col-lg-4 pt-lg-5 col-md-3">
            <h3>Messages</h3>
            <a asp-page="/Message/Index" class="btn purple lighten-3">View All</a>
        </div>
    </div>
    
</div>