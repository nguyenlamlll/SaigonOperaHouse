@page
@model SOH.Web.Pages.Message.IndexModel

@{
    ViewData["Title"] = "Index";
    ViewData["NavClass"] = "top-nav-collapse";
}
@section Styles
    {
    <style>
        body {
            padding-top: 100px;
        }
    </style>
}
<div class="container">
    <h2>Received Messages</h2>
    <div class="container py-1">
        <a asp-page="Create" class="btn btn-primary btn-rounded btn-md my-1 disabled"><i class="fa fa-pencil-square-o mr-1" aria-hidden="true"></i> Create New</a>
    </div>

    <table class="table table-bordered table-hover table-responsive-lg">
        <thead class="blue-grey lighten-4">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Message[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Message[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Message[0].Subject)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Message[0].Content)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Message)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary btn-rounded btn-sm my-1 disabled">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-primary btn-rounded btn-sm my-1 disabled">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-rounded btn-sm my-1">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
